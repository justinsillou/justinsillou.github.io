---
import BaseLayout from '../layouts/BaseLayout.astro';
import Timeline from '../components/Timeline.astro';
---

<BaseLayout pageTitle="À propos">
  <section class="max-w-5xl mx-auto px-4 py-12">
    <!-- H1 harmonisé -->
    <h1 class="text-4xl font-black tracking-tight mb-8 text-center">
      Expérience et Parcours
    </h1>
  <div
      class="bg-white/80 backdrop-blur-xl
             rounded-3xl border border-gray-100
             shadow-lg px-6 md:px-10 py-12"
    >
      <Timeline />
  </div>
  </section>
</BaseLayout>
