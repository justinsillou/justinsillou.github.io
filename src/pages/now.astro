---
import Clock from "../components/Clock.jsx";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout pageTitle="Now">
  <section class="min-h-screen p-6">
    <!-- Titre + horloge -->
    <div class="flex flex-col sm:flex-row items-center justify-between mb-6">
      <h1 class="text-3xl font-bold">Now</h1>
      <div class="mt-4 sm:mt-0">
        <Clock client:load />
      </div>
    </div>

    <!-- Projets -->
    <div class="flex flex-col gap-6">
      <!-- Projet 1 : ce site -->
      <div class="p-4 bg-white/70 backdrop-blur-md rounded-2xl shadow-md">
        <h2 class="text-xl font-semibold mb-2">Ce site</h2>
        <p class="mb-3">Mon site perso statique, portfolio & blog.</p>
        <div class="flex flex-wrap gap-2">
          <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-sm"
            >Astro</span
          >
          <span
            class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full text-sm"
            >Tailwind</span
          >
          <span
            class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-sm"
            >GitHub Pages</span
          >
        </div>
      </div>

      <!-- Projet 2 : App fléchettes -->
      <div class="p-4 bg-white/70 backdrop-blur-md rounded-2xl shadow-md">
        <h2 class="text-xl font-semibold mb-2">App Fléchettes</h2>
        <p class="mb-3">
          Application web pour gérer des parties de fléchettes en temps réel,
          avec suivi des scores et IA.
        </p>
        <div class="flex flex-wrap gap-2">
          <span
            class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-sm"
            >Node.js</span
          >
          <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-sm"
            >Express</span
          >
          <span
            class="bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full text-sm"
            >Socket.IO</span
          >
          <span class="bg-pink-100 text-pink-800 px-2 py-1 rounded-full text-sm"
            >Three.js</span
          >
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
