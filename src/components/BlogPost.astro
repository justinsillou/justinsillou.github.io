---
const { title, url, description, image, tags, draft } = Astro.props;
---

<article
  class="relative bg-white rounded-2xl shadow hover:shadow-lg transition overflow-hidden"
>
  {
    draft && (
      <span class="absolute top-2 right-2 bg-yellow-100 text-yellow-800 text-xs font-bold px-2 py-1 rounded">
        WIP
      </span>
    )
  }

  <a href={url} class="block">
    {
      image && (
        <img
          src={image.url}
          alt={title}
          class="w-full h-48 object-cover"
          loading="lazy"
        />
      )
    }

    <div class="p-5">
      <h2 class="text-xl font-semibold text-gray-800 mb-2">{title}</h2>

      {
        description && (
          <p class="text-gray-600 text-sm mb-3 line-clamp-3">{description}</p>
        )
      }

      {
        tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-2">
            {tags.map((tag: any) => (
              <span class="text-xs bg-blue-100 text-blue-600 px-2 py-1 rounded-full">
                {tag}
              </span>
            ))}
          </div>
        )
      }
    </div>
  </a>
</article>
