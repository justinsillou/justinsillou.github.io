---
interface SocialProps {
  platform: "github" | "linkedin" | "rss";
  username?: string;
}

const { platform, username } = Astro.props as SocialProps;

const icons: Record<SocialProps["platform"], string> = {
  github: "fab fa-github",
  linkedin: "fab fa-linkedin",
  rss: "fas fa-rss",
};

const urls: Record<SocialProps["platform"], string> = {
  github: username ? `https://github.com/${username}` : "#",
  linkedin: username ? `https://www.linkedin.com/in/${username}` : "#",
  rss: "/rss.xml",
};

const iconClass = icons[platform];
const href = urls[platform];
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-block mx-2 text-gray-700 hover:text-blue-500 transition-colors"
  aria-label={platform}
>
  <i class={iconClass + " w-5 h-5"}></i>
</a>
